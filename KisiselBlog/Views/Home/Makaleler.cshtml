                <!-- Comments Form -->
                <div class="card my-4 mt-5">
                    <h6 class="card-header">Yorum Yap</h6>
                    <div class="card-body">
                        @using (Html.BeginForm("YorumYap", "Home", FormMethod.Post, new { @class = "was-validated", enctype = "multipart/form-data" }))
