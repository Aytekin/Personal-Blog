
@{
    ViewBag.Title = "KayitOl";
}

<style>
    .error {
        color: red;
    }

    .backgr {
        background-color: rgba(200, 214, 229,0.2);
        padding: 20px 20px 50px 20px;
        border: 3px solid rgba(15, 18, 15,0.3);
        border-radius: 20px 20px;
    }

    h2 {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
    }

    hr {
        border: none;
        height: 2px;
        /* Set the hr color */
        background-color: rgba(0, 0, 0, 0.56); /* Modern Browsers */
    }

    .err {
        color: #ffffff;
        background-color: #EA2027;
        padding: 2px 2px 2px 2px;
        border-radius: 10px 10px;
    }
</style>


<br>

<div class="container animated zoomIn" id="islem" align="center">
    <div class="col-md-5 backgr">
        <div>
            <h1>
                <i class="fas fa-code"></i>

            </h1>


            <h2 align="center">Kayıt Ol</h2><hr>
            <form align="center" id="registForm" method="POST" autocomplete="off">
                @using (Html.BeginForm("GirisYap","Home", FormMethod.Post,
                    new { enctype = "multipart/form-data" }))
                {

                           <div class="form-group">
                        <label for="userName"><i class="fas fa-user"></i> &nbsp; Ad ve Soyad</label>
                        <input required="required" type="text" id="Name" class="form-control required" name="Name" placeholder="Ad ve Soyad" />
                    </div>
                    <div class="form-group">
                        <label for="userNickName"><i class="fas fa-user-circle"></i> &nbsp; Kullanıcı Adı</label>
                        <input required="required" type="text" id="NickName" class="form-control required" name="NickName" placeholder="Kullanıcı Adı" />
                    </div>

                    <div class="form-group">
                        <label for="userEmail"><i class="fas fa-envelope"></i>&nbsp;Email Adresi</label>
                        <input required="required" autocomplete="on" type="email" id="Email" class="form-control" aria-describedby="emailHelp" name="Email" placeholder="Email Adresi">
                    </div>

                    <div class="form-group">
                        <label for="password"><i class="fas fa-key"></i> &nbsp; Parola&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                        <input required="required" type="password" id="Password" class="form-control" name="Password" placeholder="Parola" />
                    </div>
                    <div class="form-group">
                        <label for="password"><i class="fas fa-key"></i> &nbsp; Parola Tekrar</label>
                        <input required="required" type="password" id="Password1" class="form-control" name="Password" placeholder="Parola Tekrar" />
                    </div>
                    <div class="err" id="pcheck">
                        <span><i class="fas fa-exclamation-triangle"></i> &nbsp; Parolalar Uyuşmuyor</span>
                    </div><br>
                    <div class="row">
                        <div class="col-md-5" align="center" style="margin-top:5px;">
                            <div class="custom-control custom-checkbox ">
                                <input type="checkbox" class="custom-control-input" id="confirm">
                                <label class="custom-control-label" for="confirm">Beni Hatırla</label>
                            </div>
                        </div>
                        <div class="col-md-3 offset-2" align="center">
                            <button align="center" type="submit" id="send" class="btn btn-success active"><i class="fas fa-plus"></i>&nbsp;&nbsp;Kaydet</button>

                        </div>
                    </div>
            
                 }
                
             
        </div>
    </div>
</div>

<br />
<br />
<script type="text/javascript">
    $('.err').hide();
    $("#send").prop('disabled', true);
    $('#Password').on('input', function () {
        var parola = $('#Password').val();
        var parola1 = $('#Password1').val();
        if (parola1.length > 0 && parola1 != parola) {
            $('.err').show();
            $("#send").prop('disabled', true);
        }
        else {
            $('.err').hide();
            $("#send").prop('disabled', false);
        }
        if (parola1.length < 1) {
            $("#send").prop('disabled', true);
        }
    })
    $('#Password1').on('input', function () {
        var parola = $('#Password').val();
        var parola1 = $('#Password1').val();
        if (parola.length > 0 && parola1 != parola) {
            $('.err').show();
            $("#send").prop('disabled', true);
        }
        else {
            $('.err').hide();
            $("#send").prop('disabled', false);
        }
        if (parola.length < 1) {
            $("#send").prop('disabled', true);
        }
    })
</script>
