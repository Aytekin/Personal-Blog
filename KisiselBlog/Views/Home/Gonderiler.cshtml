@model IEnumerable<KisiselBlog.Models.Articles>
@{
    ViewBag.Title = "Gonderiler";
}

<ol class="breadcrumb mtop-sm-75 mt-xl-3">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Home")">Ana Sayfa</a>
    </li>
    <li class="breadcrumb-item active">Makaleler</li>
</ol>

<div class="row">
    <!-- Page Heading/Breadcrumbs -->
  
    
    <!-- Blog Entries Column -->
    <div class="col-md-8">
        <div class="row">
            <!-- Blog Post -->
            @foreach (var item in Model)
            {
                @Html.Partial("_PartialVİewGonderiler", item);
            }

        </div>
        <!-- Pagination -->
        <ul class="pagination justify-content-center mb-4">
            <li class="page-item">
                <a class="page-link" href="#">&larr; Older</a>
            </li>
            <li class="page-item disabled">
                <a class="page-link" href="#">Newer &rarr;</a>
            </li>
        </ul>

    </div>

    <!-- Sidebar Widgets Column -->
    <div class="col-md-4 animated bounceInRight">

        <!-- Search Widget -->
        <div class="card mb-4">
            <h5 class="card-header">Ara</h5>
            <div class="card-body">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Makale,Yazı,Yazar...">
                    <span class="input-group-btn">
                        <button class="btn btn-info" type="button">Ara!</button>
                    </span>
                </div>
            </div>
        </div>

        <!-- Sort Widget -->
        <div class="card mb-4">
            <h5 class="card-header">Sırala</h5>
            <div class="row">
                <div class="col-md-2"></div>

                <div class="col-md-8 mt-3">
                    <form class="was-validated">
                        <div class="form-group mt-4">
                            <select class="custom-select" required>
                                <option value="">Sıralama Ölçütü Seçin</option>
                                <option value="1">Tarih</option>
                                <option value="2">Yazar</option>
                            </select>

                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="custom-control custom-radio">
                                    <input type="radio" class="custom-control-input" id="customControlValidation2" name="radio-stacked" required>
                                    <label class="custom-control-label" for="customControlValidation2">Artan</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="custom-control custom-radio">
                                    <input type="radio" class="custom-control-input" id="customControlValidation3" name="radio-stacked" required>
                                    <label class="custom-control-label" for="customControlValidation3">Azalan</label>
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-success mt-2" type="submit">Sırala</button>
                    </form>


                </div>
                <div class="col-md-2"></div>
            </div>
                <div class="card-body">
                </div>
            </div>

        <!-- Filtering Widget -->
        <div class="card my-4">
            <h5 class="card-header">Filtrele</h5>
            <div class="card-body">
            </div>
        </div>

        <!-- Categories Widget -->
        <div class="card my-4">
            <h5 class="card-header">Kategoriler</h5>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6">
                        <ul class="list-unstyled mb-0">
                            <li>
                                <a href="#">Web Design</a>
                            </li>
                            <li>
                                <a href="#">HTML</a>
                            </li>
                            <li>
                                <a href="#">Freebies</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <ul class="list-unstyled mb-0">
                            <li>
                                <a href="#">JavaScript</a>
                            </li>
                            <li>
                                <a href="#">CSS</a>
                            </li>
                            <li>
                                <a href="#">Tutorials</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Side Widget -->
        <div class="card my-4">
            <h5 class="card-header">Son Paylaşılanlar</h5>
            <div class="card-body">
            </div>
        </div>

    </div>

</div>
