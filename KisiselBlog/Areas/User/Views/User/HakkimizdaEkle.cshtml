@model  KisiselBlog.Areas.User.Models.AddAboutInfoModel
@{
    ViewBag.Title = "HakkimizdaEkle";
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
    string aboutt = Model.About;
    string header = Model.Header;
    string image = Model.imagePath;
}


<div class="container artadd">
    <br>

    <div class=row>
        <div class="col-md-8 offset-2">
            <div align="center">
                <h2>Makale Ekle</h2><br>
                @using (Html.BeginForm("HakkimizdaEkle", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
                 {
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="baslik">Konu Başlığı</label>

                            <input type="text" value="@header" class="form-control" id="Header" name="Header" placeholder="Konu Başlığı">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleFormControlTextarea1">Resim Ekle</label>
                            <div class="custom-file">
                                <input type="file" value="@image" name="imagePath" id="file" class="custom-file-input" required>
                                <label class="custom-file-label" for="validatedCustomFile">Resim Seç</label>
                                <div class="invalid-feedback">feedback</div>
                            </div>
                        </div>
                                               
                    </div>


                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Yazı İçeriği</label>
                        <textarea value="@aboutt" class="form-control" required="required" id="About" name="About" rows="5" maxlength="600" placeholder="Hakkimizda"></textarea>
                    </div>

                  

                    <button type="submit" class="btn btn-primary">Düzenle</button>
                 }


            </div>

        </div>
    </div>

</div>