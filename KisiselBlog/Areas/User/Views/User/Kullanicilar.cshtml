@using KisiselBlog.Models
@model IEnumerable<Users>
@{
    ViewBag.Title = "Kullanicilar";
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}



<div class="card-body">
    <div class="table-responsive">
        <table class="table text-info" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Adı</th>
                    <th>Soyadı</th>
                    <th>Kullanıcı Adı</th>
                    <th>Email</th>
                    <th>Yetki</th>
                    <th>Kayıt Tarihi</th>
                    <th>Son Login Tarihi</th>
                    <th class="text-danger">Sil</th>
                </tr>
            </thead>
     
            <tbody class="text-dark">
                @foreach (var i in Model)
                {
                    DateTime biggest = i.dates.Max(r => r.Date);
                    KisiselBlog.Models.Dates regist = i.dates.Where(r => r.DateName == "Registration").FirstOrDefault();
                <tr>
                    <td>@i.Name</td>
                    <td>@i.Surname</td>
                    <td>@i.NickName</td>
                    <td>@i.Email</td>
                    <td>@i.roles.RoleName</td>
                    <td>@regist.Date.ToString()</td>
                    <td>@biggest.ToString()</td>
                   
                    
                    <td >
      
                        <a href="@Url.Action("KullaniciSil", "User", new { id = i.UserID })">
                            <button  class="btn btn-danger btn-sm">
                               <i class="fa fa-fw fa-trash-o" aria-hidden="true"></i>
                            </button>
                        </a>
                    </td>
                    
                </tr>
                }



            </tbody>
        </table>
    </div>
</div>


